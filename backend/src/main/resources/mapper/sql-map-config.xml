	<typeAliases>
      	<typeAlias alias="insertProduct" type="com.spring.project.dto.ProductDTO"/>
      	<typeAlias alias="insertAuctions" type="com.spring.project.dto.AuctionsDTO"/>
      	<typeAlias alias="insertProductImages" type="com.spring.project.dto.ImgDTO"/>
