      	<typeAlias alias="AdminDashboard" type="com.spring.project.dto.AdminDashboard"/>
		<typeAlias alias="user" type="com.spring.project.dto.UserDTO"/>
      	<typeAlias alias="ServerToProductDTO" type="com.spring.project.dto.ServerToProductDTO"/>
		<typeAlias alias="wallet" type="com.spring.project.dto.WalletDTO"/>
		<typeAlias alias="wallet" type="com.spring.project.dto.WalletDTO"/>
	</typeAliases>

	<typeHandlers>
		<typeHandler handler="org.apache.ibatis.type.LocalDateTimeTypeHandler" javaType="java.time.LocalDateTime"/>
	</typeHandlers>
	
